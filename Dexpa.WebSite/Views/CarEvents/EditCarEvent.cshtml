@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Изменить событие";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string s = "\"" + ViewData["userName"] + "\"";
}

<div class="row">
    <div class="container">
        <div class="row pageheader"><h2>Изменить событие</h2></div>
        <div class="row " ng-controller="CarEventsCtrl">
            <div class="containerWithoutPageHeader" ng-init="InitEditCarEvent(@ViewData["id"], @s)">
                <form id="editCarEventForm" ng-submit="updateCarEvent(event)">
                    @Html.Partial("Partials/_AddEventForm")
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/AngularControllers/CarsEventsController.js")
}
