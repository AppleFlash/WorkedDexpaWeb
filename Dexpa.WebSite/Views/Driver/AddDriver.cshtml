@{
    ViewBag.Title = "Добавить водителя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container">
        <div class="row pageheader"><h2>Регистрация нового водителя</h2></div>
        <div class="row " ng-controller="DriverCtrl" ng-init="initAddDriver()">
            <div class="containerWithoutPageHeader">
                <form id="addDriverForm" ng-submit="addDriver(driver)">
                    @Html.AntiForgeryToken()
                    @Html.Partial("_AddDriverForm")
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/AngularControllers/DriversController.js")
}
