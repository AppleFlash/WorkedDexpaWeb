        <img src="/Content/Images/loader.gif" alt="">
    </div>*@

<div class="row">
    <div class="containerWithoutPageHeader">
        <table class="table table-bordered table-hover" id="report">
            <thead>
                <tr>
                    <td class="text-center" ng-click="sortBy('date')">Месяц <span id="date"></span></td>
                    <td class="text-center" ng-click="sortBy('profit')">Прибыль <span id="profit"></span></td>
                    <td class="text-center" ng-click="sortBy('rent')">Аренда <span id="rent"></span></td>
                    <td class="text-center" ng-click="sortBy('techSupport')">Тех. поддержка <span id="techSupport"></span></td>
                    <td class="text-center" ng-click="sortBy('precent')">Проценты <span id="precent"></span></td>
                    <td class="text-center" ng-click="sortBy('taxometrAmount')">Сумма по таксометру <span id="taxometrAmount"></span></td>
                    <td class="text-center" ng-click="sortBy('allOrders')">Число заказов <span id="allOrders"></span></td>
                    <td class="text-center" ng-click="sortBy('yandex')">Яндекс <span id="yandex"></span></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="orderReport in reports">
                    <td>{{orderReport.date}}</td>
                    <td class="text-right">{{orderReport.profit.toFixed(2)}}</td>
                    <td class="text-right">{{orderReport.rent.toFixed(2)}}</td>
                    <td class="text-right">{{orderReport.techSupport.toFixed(2)}}</td>
                    <td class="text-right">{{orderReport.percent.toFixed(2)}}</td>
                    <td class="text-right">{{orderReport.taxometrAmount.toFixed(2)}}</td>
                    <td class="text-right">{{orderReport.allOrders}}</td>
                    <td class="text-right">{{orderReport.yandex}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>